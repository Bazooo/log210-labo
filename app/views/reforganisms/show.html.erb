<h2><%= @organisme.name %></h2>
<div class="row">
  <div class="col-sm-4">
    <p>
      <strong>Email:</strong>
      <%= @organisme.email %><br>
      <strong>Website:</strong>
      <%= @organisme.website %>
    </p>
  </div>
  <div class="col-sm-4">
    <p>
      <strong>Civic Number:</strong>
      <%= @organisme.address.civic_number %><br>
      <strong>Street:</strong>
      <%= @organisme.address.street %><br>
      <strong>City:</strong>
      <%= @organisme.address.city %><br>
      <strong>Postcode:</strong>
      <%= @organisme.address.postcode %>
    </p>
  </div>
  <div class="col-sm-4">
    <p>
      <strong>Work:</strong>
      <%= @organisme.telephone.work %><br>
      <strong>Fax:</strong>
      <%= @organisme.telephone.fax %>
    </p>
  </div>
</div>
<%= link_to '<span class="glyphicon glyphicon glyphicon-chevron-left"></span> Back'.html_safe, reforganisms_path() %>
