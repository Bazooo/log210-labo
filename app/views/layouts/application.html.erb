<!DOCTYPE html>
<html>
    <head>
        <title>Log210</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <div class="container-fluid">
            <div class="col-md-6 col-md-offset-3">
                <% if user_signed_in? %>
                    <% role = current_user.role %>
                <% else %>
                    <% role = "" %>
                <% end %>
                <%= react_component(
                    'Header',
                    {
                        root: root_url,
                        signed: user_signed_in?,
                        destroyPath: destroy_user_session_path,
                        role: role
                    })
                    %>
                <%= react_component('Notice', {text: notice}) %>
                <%= react_component('Alert', {text: alert}) %>
                <%= yield %>
            </div>
        </div>
    </body>
</html>
