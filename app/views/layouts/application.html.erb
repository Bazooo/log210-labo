<!DOCTYPE html>
<html>
    <head>
        <title>Log210</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <div class="container-fluid">
            <div class="col-md-6 col-md-offset-3">
                <%= react_component(
                    'Header',
                    {
                        title: request.original_url,
                        signed: user_signed_in?,
                        destroyPath: destroy_user_session_path
                    })
                    %>
                <%= react_component('Notice', {text: notice}) %>
                <%= react_component('Alert', {text: alert}) %>
                <%= yield %>
            </div>
        </div>
    </body>
</html>
